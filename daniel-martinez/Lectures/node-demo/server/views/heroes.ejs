<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Tour of Heroes</title>
		<link rel="stylesheet" href="./heroes.css" />
	</head>
	<body>
		<h1>Tour of Heroes</h1>
		<nav>
			<a href="/">Dashboard</a>
			<a href="/heroes">Heroes</a>
		</nav>
		<main>
			<h2>My Heroes</h2>

			<div>
				<label
					>Hero name:
					<input id="hero-name__input" />
				</label>
			</div>

			<ul class="heroes" id="heroes">
				<% heroes.map((hero) => { %>
				<li>
					<a href="../detail/detail.html?heroId=${hero.id}">
					<span class="badge" id="hero-id"><%= hero.id %></span>
					<span id="hero-name"><%= hero.name %></span>
					</a>
					<button class="delete" title="delete hero">x</button>
					</li>
					<% }) %>
			</ul>
		</main>
	</body>
</html>
